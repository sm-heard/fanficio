<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.smheard.fanficio">

  <application
    android:allowBackup="true"
    android:icon="@drawable/fanficiologo"
    android:label="Fanficio"
    android:logo="@drawable/fanficiologo"
    android:name=".FanficioApplication"
    android:roundIcon="@drawable/fanficiologo"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity android:name=".controller.ChapterTextActivity">
    </activity>
    <activity android:name=".controller.ChapterActivity">
    </activity>

    <activity
      android:name=".controller.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>

  <uses-permission android:name="android.permission.INTERNET"/>

</manifest>